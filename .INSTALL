post_install() {
	usr/sbin/update-unified-image linux.efi /boot/initramfs-linux.img
	usr/sbin/update-unified-image linux-fallback.efi /boot/initramfs-linux-fallback.img
}

pre_remove() {
	rm -f boot/linux.efi
	rm -f boot/linux.efi.old
	rm -f boot/linux-fallback.efi
	rm -f boot/linux-fallback.efi.old
}
